# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (NeonDB PostgreSQL)
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/riskmind?sslmode=require"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=7d

# Groq API (LLM)
GROQ_API_KEY=your-groq-api-key-here

# LangSmith (Optional - for observability)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=riskmind
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
CORS_ORIGIN=http://localhost:5173
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Agent Configuration
AGENT_RETRY_ATTEMPTS=3
AGENT_TIMEOUT_MS=5000
CIRCUIT_BREAKER_THRESHOLD=0.5
CIRCUIT_BREAKER_WINDOW_MS=600000

# Risk Calculation
VAR_CONFIDENCE=0.95
VOLATILITY_WINDOW_DAYS=30
CONCENTRATION_THRESHOLD=0.4
RISK_HIGH_THRESHOLD=0.7
RISK_MEDIUM_THRESHOLD=0.4

# CSV Data Path (for development)
CSV_DATA_PATH=./data

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
